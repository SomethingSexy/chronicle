    "disciplines": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "enum": [
              "Animalism",
              "Auspex",
              "Blood Sorcery",
              "Celerity",
              "Dominate",
              "Fortitude",
              "Obfuscate",
              "Potence",
              "Presence",
              "Protean"
            ],
            "description": "The name of the discipline, restricted to the predefined list of valid disciplines."
          },
          "level": {
            "type": "integer",
            "minimum": 1,
            "maximum": 5,
            "description": "Current mastery level of the discipline."
          },
          "powers": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string",
                  "description": "The name of the discipline power."
                },
                "level": {
                  "type": "integer",
                  "minimum": 1,
                  "maximum": 5,
                  "description": "The level at which this power becomes available."
                },
                "description": {
                  "type": "string",
                  "description": "A brief description of the power's effects."
                }
              },
              "required": [
                "name",
                "level"
              ]
            },
            "description": "List of powers available at the given level."
          }
        },
        "required": [
          "name",
          "level",
          "powers"
        ],
        "if": {
          "properties": {
            "name": {
              "const": "Protean"
            }
          }
        },
        "then": {
          "properties": {
            "powers": {
              "items": {
                "properties": {
                  "name": {
                    "enum": [
                      "Eyes of the Beast",
                      "Weight of the Feather",
                      "Feral Weapons",
                      "Earth Meld",
                      "Metamorphosis",
                      "Shapechange",
                      "Unnatural Vigor",
                      "Mist Form",
                      "Dragon Claws",
                      "Primeval Miasma"
                    ],
                    "description": "The name of the Protean power."
                  }
                }
              }
            }
          }
        },
        "else": {
          "if": {
            "properties": {
              "name": {
                "const": "Presence"
              }
            }
          },
          "then": {
            "properties": {
              "powers": {
                "items": {
                  "properties": {
                    "name": {
                      "enum": [
                        "Awe",
                        "Daunt",
                        "Entrancement",
                        "Dread Gaze",
                        "Lingering Kiss",
                        "Irresistible Voice",
                        "Summon",
                        "Unknowing Whispers",
                        "Majesty",
                        "Love"
                      ],
                      "description": "The name of the Presence power."
                    }
                  }
                }
              }
            }
          },
          "else": {
            "if": {
              "properties": {
                "name": {
                  "const": "Animalism"
                }
              }
            },
            "then": {
              "properties": {
                "powers": {
                  "items": {
                    "properties": {
                      "name": {
                        "enum": [
                          "Bond Famulus",
                          "Feral Whispers",
                          "Unliving Hive",
                          "Subsume the Spirit",
                          "Animal Succulence"
                        ],
                        "description": "The name of the Animalism power."
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
