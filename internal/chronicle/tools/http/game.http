# @name add_character_to_world
POST http://localhost:3000/games/{{gameId}}/worlds/{{worldId}}/relationships/characters
Content-Type: application/vnd.api+json

{
    "data": {
        "type": "characters",
        "id": "{{characterId}}"
    }
}

